    "## 4. Comparaci√≥n entre √Åtomos Hidrogenoides"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Crear diferentes √°tomos\n",
    "atoms = {\n",
    "    'H': BohrAtom(Z=1),\n",
    "    'He‚Å∫': BohrAtom(Z=2),\n",
    "    'Li¬≤‚Å∫': BohrAtom(Z=3)\n",
    "}\n",
    "\n",
    "# Comparar energ√≠as del nivel fundamental\n",
    "print(\"\\nCOMPARACI√ìN DE ENERG√çAS DEL NIVEL FUNDAMENTAL\")\n",
    "print(\"=\"*60)\n",
    "print(f\"{'√Åtomo':>6} | {'Z':>3} | {'E‚ÇÅ (eV)':>10} | {'r‚ÇÅ (√Ö)':>10}\")\n",
    "print(\"-\"*60)\n",
    "\n",
    "for name, atom in atoms.items():\n",
    "    E1 = atom.energy_level_eV(1)\n",
    "    r1 = atom.orbital_radius_angstrom(1)\n",
    "    print(f\"{name:>6} | {atom.Z:>3} | {E1:>10.2f} | {r1:>10.3f}\")\n",
    "\n",
    "# Gr√°fico comparativo\n",
    "fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(14, 6))\n",
    "\n",
    "# Energ√≠as\n",
    "n_values = np.arange(1, 6)\n",
    "for name, atom in atoms.items():\n",
    "    energies = [atom.energy_level_eV(n) for n in n_values]\n",
    "    ax1.plot(n_values, energies, 'o-', label=name, linewidth=2, markersize=8)\n",
    "\n",
    "ax1.set_xlabel('Nivel cu√°ntico n', fontsize=12)\n",
    "ax1.set_ylabel('Energ√≠a (eV)', fontsize=12)\n",
    "ax1.set_title('Niveles de Energ√≠a por √Åtomo', fontsize=14, weight='bold')\n",
    "ax1.legend(fontsize=12)\n",
    "ax1.grid(True, alpha=0.3)\n",
    "ax1.axhline(0, color='black', linestyle='--', alpha=0.5)\n",
    "\n",
    "# Radios\n",
    "for name, atom in atoms.items():\n",
    "    radii = [atom.orbital_radius_angstrom(n) for n in n_values]\n",
    "    ax2.plot(n_values, radii, 'o-', label=name, linewidth=2, markersize=8)\n",
    "\n",
    "ax2.set_xlabel('Nivel cu√°ntico n', fontsize=12)\n",
    "ax2.set_ylabel('Radio orbital (√Ö)', fontsize=12)\n",
    "ax2.set_title('Radios Orbitales por √Åtomo', fontsize=14, weight='bold')\n",
    "ax2.legend(fontsize=12)\n",
    "ax2.grid(True, alpha=0.3)\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.show()"
   ]
